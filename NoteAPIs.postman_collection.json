{
	"info": {
		"_postman_id": "note-apis-collection",
		"name": "NoteAPIs - Authentication & Notes",
		"description": "Collection for testing NoteAPIs with authentication",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Auto-save token after successful registration",
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set(\"token\", response.token);",
									"    pm.environment.set(\"username\", response.user.username);",
									"    pm.environment.set(\"userId\", response.user.id);",
									"    console.log(\"✅ Token saved to environment: \" + response.token.substring(0, 20) + \"...\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"postmantest\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						},
						"description": "Register a new user and get a JWT token"
					},
					"response": []
				},
				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Auto-save token after successful login",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set(\"token\", response.token);",
									"    pm.environment.set(\"username\", response.user.username);",
									"    pm.environment.set(\"userId\", response.user.id);",
									"    console.log(\"✅ Token saved to environment: \" + response.token.substring(0, 20) + \"...\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						},
						"description": "Login with existing user credentials"
					},
					"response": []
				},
				{
					"name": "Register - Validation Error (missing username)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						},
						"description": "Test validation - should return 400"
					},
					"response": []
				},
				{
					"name": "Login - Invalid Credentials",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"nonexistent\",\n  \"password\": \"wrongpassword\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						},
						"description": "Test authentication failure - should return 401"
					},
					"response": []
				}
			],
			"description": "Authentication endpoints"
		},
		{
			"name": "Notes (Protected)",
			"item": [
				{
					"name": "Create Note",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"description": "Uses token from environment"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"My Test Note\",\n  \"content\": \"This note was created via Postman with authentication!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/notes",
							"host": ["{{base_url}}"],
							"path": ["notes"]
						},
						"description": "Create a new note (requires authentication)"
					},
					"response": []
				},
				{
					"name": "Get All Notes",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/notes",
							"host": ["{{base_url}}"],
							"path": ["notes"]
						},
						"description": "Get all notes (requires authentication)"
					},
					"response": []
				},
				{
					"name": "Get Note by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/notes/1",
							"host": ["{{base_url}}"],
							"path": ["notes", "1"]
						},
						"description": "Get a specific note by ID (requires authentication)"
					},
					"response": []
				},
				{
					"name": "Update Note",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Updated Note Title\",\n  \"content\": \"Updated content\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/notes/1",
							"host": ["{{base_url}}"],
							"path": ["notes", "1"]
						},
						"description": "Update a note (requires authentication)"
					},
					"response": []
				},
				{
					"name": "Delete Note",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/notes/1",
							"host": ["{{base_url}}"],
							"path": ["notes", "1"]
						},
						"description": "Delete a note (requires authentication)"
					},
					"response": []
				},
				{
					"name": "Create Note - No Token (Should Fail)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Should Fail\",\n  \"content\": \"This should return 401\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/notes",
							"host": ["{{base_url}}"],
							"path": ["notes"]
						},
						"description": "Test protected route without token - should return 401"
					},
					"response": []
				},
				{
					"name": "Create Note - Invalid Token (Should Fail)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer invalid_token_here"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Should Fail\",\n  \"content\": \"This should return 403\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/notes",
							"host": ["{{base_url}}"],
							"path": ["notes"]
						},
						"description": "Test protected route with invalid token - should return 403"
					},
					"response": []
				}
			],
			"description": "Protected note endpoints"
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000"
		}
	]
}
